// Color
color-background = #eee
color-font = #444
color-meta = #999
color-border = #ddd
color-link = #0085ff

// Font
// font-default = Georgia, 'Times New Roman', Times, 'Songti SC', SimSun, "Microsoft YaHei", serif, "arial"
font-default = "Helvetica Neue", Helvetica, Arial, "Hiragino Sans GB", "Hiragino Sans GB W3", "WenQuanYi Micro Hei", "Microsoft YaHei UI", "Microsoft YaHei", sans-serif;
font-serif = "Georgia", serif
font-mono = Monaco, Menlo, Consolas, Courier New, monospace
font-title = 'Microsoft YaHei', Tahoma, Arial;

// @import url("//fonts.googleapis.com/css?family=Source+Code+Pro")

font-icon = FontAwesome
font-icon-path = 'font/fontawesome-webfont'

@font-face {
  font-family 'FontAwesome'
  font-style normal
  font-weight 500
  src url(font-icon-path.eot?#iefix) format('embedded-opentype'), url(font-icon-path.woff) format('woff'), url(font-icon-path.ttf) format('truetype'), url(font-icon-path.svg#FontAwesomeRegular) format('svg')
}

// Width
page-width = 1200px